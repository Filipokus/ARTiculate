@model ExhibitionViewModel

<link rel="stylesheet" href="~/Assets/css/exhibitions.css?v={random string}" />

<h1>Exhibitions</h1>


@if(Model.NewlyAddedExhibitions.Count==0)
{ }
else {
<h2 class="diagonal-h2">Newly added Exhibitions</h2>
<div class="diagonal-box">
    <div class="straight-div">
        <div class="carousel-container" id="active-carousel-content">
            <div class="exhibition-flex">
                <button class="arrow-left-btn" onclick="loadNewContent(this)">
                    <img class="arrow-left-img" src="~/Assets/Images/back-light-left.png" alt="Previous Exhibition" />
                </button>
                <div class="wrapper" onclick="location.href='@Url.Action("Exhibition", "Exhibitions", new { @Model.NewlyAddedExhibitions[0].Id })'">

                    @for (int i = 0; i < @Model.NewlyAddedExhibitions[0].Exhibition_ArtItem.Count; i++)
                    {
                        <img class="romb" src="@Url.Content(string.Format(@Model.NewlyAddedExhibitions[0].Exhibition_ArtItem[i].ArtItems.Picture))" alt="">
                    }
                </div>
                <button class="arrow-right-btn" onclick="loadNewContent(this)">
                    <img class="arrow-right-img" src="~/Assets/Images/back-light-right.png" alt="Next Exhibition" />
                </button>
            </div>

            <div class="exhibition-info" onclick="location.href='@Url.Action("Exhibition", "Exhibitions", new { Model.NewlyAddedExhibitions[0].Id })'">
                <h3>@Model.NewlyAddedExhibitions[0].Title</h3>
                <p id="description">@Model.NewlyAddedExhibitions[0].Description</p>
            </div>
        </div>

        @for (int i = 1; i < Model.NewlyAddedExhibitions.Count; i++)
        {
            <div class="carousel-container">
                <div class="exhibition-flex">
                    <button class="arrow-left-btn" onclick="loadNewContent(this)">
