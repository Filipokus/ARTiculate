                    </button>
                </div>

                <div class="exhibition-info" onclick="location.href='@Url.Action("Exhibition", "Exhibitions", new {  @Model.NewlyAddedExhibitions[i].Id })'">
                    <h3>@Model.NewlyAddedExhibitions[i].Title</h3>
                    <p id="description">@Model.NewlyAddedExhibitions[i].Description</p>
                </div>
            </div>
        }

    </div>
