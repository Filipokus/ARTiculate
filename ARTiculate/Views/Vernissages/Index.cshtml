@model AllVernisagesViewModel

<link rel="stylesheet" href="~/Assets/css/vernissages.css?v={random string}" />
<h1>Vernissages</h1>

<button class="live-btn" onclick="location.href='@Url.Action("Vernissage", "Vernissages", new { id = 1 })'">
    <div class="live-container">
        <img class="live-btn-img" src="Assets/Images/Livebutton.png">
        <div class="live-txt">
            <h2>Live Vernissage title</h2>
            <h3>Live Vernissage Artist/s</h3>
        </div>
    </div>
</button>





<h2 class="diagonal-h2">Next 4 Vernissages</h2>
<div class="diagonal-box">
    <div class="next-4-content">
        <div class="left4">
            @for (int i = 0; i < Model.ArtistVernisageDTOs.Count; i++)
            {
                if (i % 2 != 0 && i < 5)
                {
                    <button class="next-4" onclick="location.href='@Url.Action("About", "Vernissages",new { Model.ArtistVernisageDTOs[i].Id})'">
                        <img src="Assets/Images/PlaceholderIMG.jpg" onmouseover="artworkHoverIn(this)" onmouseout="artworkHoverOut(this)">
                        <div class="next4-container" onmouseover="artworkHoverIn(this)" onmouseout="artworkHoverOut(this)">
                            <h3>@Model.ArtistVernisageDTOs[i].Title</h3>
                            <p>@Model.ArtistVernisageDTOs[i].DateTime</p>
                            <p>
                                Artist:
                                @foreach (var artist in Model.ArtistVernisageDTOs[i].FullName)
                                {
                                    @artist
                                }
                            <p />
                        </div>
                    </button>
                }
            }
        </div>
        <div class="right4">
            @for (int i = 0; i < Model.ArtistVernisageDTOs.Count; i++)
            {
                if (i % 2 != 0 && i < 5)
                {
                <button class="next-4" onclick="location.href='@Url.Action("About", "Vernissages",new { Model.ArtistVernisageDTOs[i].Id })'">
                    <img src="Assets/Images/PlaceholderIMG.jpg" onmouseover="artworkHoverIn(this)" onmouseout="artworkHoverOut(this)">
                    <div class="next4-container" onmouseover="artworkHoverIn(this)" onmouseout="artworkHoverOut(this)">
                        <h3>@Model.ArtistVernisageDTOs[i].Title</h3>
                        <p>@Model.ArtistVernisageDTOs[i].DateTime</p>
                        <p>
                            Artist:
                            @foreach (var artist in Model.ArtistVernisageDTOs[i].FullName)
                            {
                                @artist
                            }
                        <p />
                    </div>
                </button>

                }
            }
        </div>
    </div>
</div>
           

<h2 class="upcoming-h2">Upcoming Vernissages</h2>
@foreach (var vernisage in Model.ArtistVernisageDTOs)
{
    <button class="upcoming" onclick="location.href='@Url.Action("About", "Vernissages", new { vernisage.Id })'">
        <div class="upcoming-date">
            <p>@vernisage.DateTime</p>
            <p>Månad</p>
        </div>
        <div class="upcoming-txt">
            <p>Titel: @vernisage.Title</p>
            <p>Artist:
                @foreach (var artist in vernisage.FullName)
                {
                    @artist
                }
            <p />
        </div>
    </button>
}