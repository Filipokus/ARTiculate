@using Microsoft.AspNetCore.Identity
@using ARTiculate.Areas.Identity.Data
@inject SignInManager<ARTiculateUser> SignInManager
@inject UserManager<ARTiculateUser> userManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ARTiculate</title>
    <link href="~/Assets/css/reset.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Assets/css/site.css?v={random string}" />
    @RenderSection("StyleSheets", required: false)
    <link rel="stylesheet" href="~/Assets/css/responsivity.css?v={random string}" />


    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <h1 class="hidden">ARTiculate</h1>
        <a asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/Assets/Images/ARTiculate-LOGO.png" />
        </a>
        <div class="search-container-main">
            <form class="search-container" asp-controller="SearchResult" asp-action="Index" method="post" autocomplete="off">
                <div class="search">
                    <button type="submit" class="searchButton">
                        <img class="searchIcon" src="~/Assets/Images/search.png">
                    </button>
                    <input type="text" class="searchTerm" name="searchString" placeholder="Search ..." required>
                </div>
            </form>
        </div>
        <nav>
            <img src="~/Assets/Images/Hamburger.png" onclick="hideOrShowMenu()" />
            <ul id="menu">
                <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='@Url.Action("Index", "Home")'">
                    <a asp-area="" asp-controller="Home" asp-action="Index" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Home</a>
                </li>
                <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='@Url.Action("Index", "Vernissages")'">
                    <a asp-area="" asp-controller="Vernissages" asp-action="Index" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Vernissages</a>
                </li>
                <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='@Url.Action("Index", "Exhibitions")'">
                    <a asp-area="" asp-controller="Exhibitions" asp-action="Index" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Exhibitions</a>
                </li>
                <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='@Url.Action("Index", "Studios")'">
                    <a asp-area="" asp-controller="Studios" asp-action="Index" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Studios</a>
                </li>
                <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='@Url.Action("Exhibition", "Exhibitions", new { id = @Model.RandomizedId })'">
                    <a asp-area="" asp-controller="@Model.RandomizedController" asp-action="@Model.RandomizedAction" asp-route-id="@Model.RandomizedId" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Take me somewhere new!</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='@Url.Action("LogOut", "Home")'">
                        <a asp-area="" asp-controller="Home" asp-action="LogOut" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Artist Logout</a>

                    </li>
                }
                else
                {
                    <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='Identity/Account/Login'">
                        <a asp-area="Identity" asp-page="/Account/Login" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Artist Login</a>
                    </li>
                    <li onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)" onclick="location.href='Identity/Account/Register'">
                        <a asp-area="Identity" asp-page="/Account/Register" onmouseover="menuHoverIn(this)" onmouseout="menuHoverOut(this)">Register</a>
                    </li>
                }
            </ul>
        </nav>
    </header>
    <div class="container">
        <h2 id="mobile-only">Only avaliable on your mobile for the moment.</h2>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="footer">
        <div class="footer-container">
            &copy; 2021 - ARTiculate - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/Assets/js/site.js?v={random string}" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
