@model ARTiculate.Models.ArtItemViewModel

@{
    ViewData["Title"] = "Uploaded Item";
}

@section StyleSheets{
    <link rel="stylesheet" href="~/Assets/css/ArtItem.css?v={random string}" />
}

<button class="back" onclick="location.href='@Url.Action("MyStudio", "Studios")'"> <img src="~/Assets/Images/back.png" alt="Alternate Text" />Back to my studio</button>

<div class="create-title">
    <h1>@Model.ArtItem.Name</h1>
</div>

<h2 class="diagonal-h2">Fill in</h2>
<div class="diagonal-box">
    <div id="bend-back">
        <img class="uploaded-image" src="@Url.Content(string.Format(@Model.ArtItem.Picture))" alt="Alternate Text" />
        <p>@Model.ArtItem.Description</p>
    </div>
</div>