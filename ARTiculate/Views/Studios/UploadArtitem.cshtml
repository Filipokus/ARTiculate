@model ARTiculate.Models.ArtItemViewModel

@{
    ViewData["Title"] = "UploadArtitem";
}
<link rel="stylesheet" href="~/Assets/css/CreateVernissage.css?v={random string}" />
<div class="create-title">
    <h1>Create vernissage</h1>
</div>

<h2 class="diagonal-h2">Fill in</h2>
<div class="diagonal-box">
    <div id="bend-back">

        @using (Html.BeginForm("UploadArtitem", "Studios", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <form id="create-form">
            <div class="input-item" id="youtube-link">
                <h3>Name of Artwork</h3>
                @Html.TextBoxFor(m => m.ArtItem.Name)
            </div>
            <div class="input-item" id="youtube-link">
                <h3>Image File</h3>
                @Html.EditorFor(m => m.ImageFile)
            </div>
            <div class="input-item" id="youtube-link">
                <h3>Description</h3>
                @Html.TextBoxFor(m => m.ArtItem.Description)
            </div>
            <div class="input-item" id="youtube-link">
                @Html.HiddenFor(m => m.Artist.Id, Model.ArtistId)
            </div>
            <div class="input-item" id="submit">
                <input type="submit" id="submit-btn" name="input-submit" value="Upload artwork" />
            </div>

        </form>
        }
    </div>
</div>