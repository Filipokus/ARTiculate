
<link rel="stylesheet" href="~/Assets/css/studio.css?v={random string}" />

<h1>Studio of ARTist Name</h1>
<div id="artist-profile">
    <img src="~/Assets/Images/PlaceholderIMG.jpg" alt="Alternate Text" />
    <p>Description</p>
</div>

<div class="create-buttons">
    <button class="studio-btn">
        <p class="plus">+</p>
        <p>Add art items</p>
    </button>
    <button class="studio-btn">
        <p>Create exhibition</p>
    </button>
</div>

<div class="diagonal-box">
    <div class="straight-div">
        <div class="studio-content">
            <div class="folder">
                <button class="studio-folder-btn">
                    <img src="~/Assets/Images/PlaceholderIMG.jpg" alt="Alternate Text" />
                    <div class="studio-content-container">
                        <h2 class="exhibition-name">My First Vernissage</h2>
                    </div>
                </button>
            </div>
            <div class="folder">
                <button class="studio-folder-btn">
                    <img src="~/Assets/Images/PlaceholderIMG.jpg" alt="Alternate Text" />
                    <div class="studio-content-container">
                        <h2 class="exhibition-name">My 2nd Vernissage</h2>
                    </div>
                </button>
            </div>

            <div class="open-art-item">
                <button class="studio-content-btn">
                    <img src="~/Assets/Images/PlaceholderIMG.jpg" alt="Alternate Text" />
                </button>
            </div>

            <div class="folder" id="private-folder">
                <button class="studio-folder-btn">
                    <img src="~/Assets/Images/PlaceholderIMG.jpg" alt="Alternate Text" />
                    <img class="lock" src="~/Assets/Images/padlockGray.png" alt="Lock Icon" />
                    <div class="studio-content-container">
                        <h2 class="exhibition-name">Private</h2>
                    </div>
                </button>
            </div>
        </div>

    </div>
</div>
